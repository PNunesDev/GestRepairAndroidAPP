<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.obscu.gestrepair5.Vehicle"
    tools:showIn="@layout/activity_vehicle">

    <TextView
        android:id="@+id/txt_Vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Viatura"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.501" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="57dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Vehicle"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/txtRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:text="Matricula:"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintTop_toBottomOf="@+id/txt_Vehicle" />

            <TextView
                android:id="@+id/txtRegistrationValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="24dp"
                android:text="1"
                app:layout_constraintLeft_toRightOf="@+id/txtRegistration"
                app:layout_constraintTop_toBottomOf="@+id/txt_Vehicle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtCC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="23dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Cilindrada:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtRegistration" />

            <TextView
                android:id="@+id/txtCCValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="146dp"
                android:layout_marginTop="24dp"
                android:text="2"
                app:layout_constraintLeft_toRightOf="@+id/txtCC"
                app:layout_constraintTop_toBottomOf="@+id/txtRegistrationValue" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtFuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Quilometros:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtCC" />

            <TextView
                android:id="@+id/txtKMValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="133dp"
                android:layout_marginTop="24dp"
                android:text="3"
                app:layout_constraintLeft_toRightOf="@+id/txtFuel"
                app:layout_constraintTop_toBottomOf="@+id/txtCCValue" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtGAS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Combustivel"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtFuel" />

            <TextView
                android:id="@+id/txtFuelValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="133dp"
                android:layout_marginTop="24dp"
                android:text="4"
                app:layout_constraintLeft_toRightOf="@+id/txtGAS"
                app:layout_constraintTop_toBottomOf="@+id/txtKMValue" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtDateRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Data do Registo:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtGAS" />

            <TextView
                android:id="@+id/txtDateRegisterValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="112dp"
                android:layout_marginTop="24dp"
                android:text="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/txtDateRegister"
                app:layout_constraintTop_toBottomOf="@+id/txtFuelValue"
                app:layout_constraintVertical_bias="0.003" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtFrontTire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Medida dos Pneus Frontal:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDateRegister" />

            <TextView
                android:id="@+id/txtFrontTireValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="24dp"
                android:text="6"
                app:layout_constraintLeft_toRightOf="@+id/txtFrontTire"
                app:layout_constraintTop_toBottomOf="@+id/txtDateRegisterValue" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtBackTire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="29dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Medida dos Pneus Traseiros:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtFrontTire" />

            <TextView
                android:id="@+id/txtBackTireValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="24dp"
                android:text="7"
                app:layout_constraintLeft_toRightOf="@+id/txtBackTire"
                app:layout_constraintTop_toBottomOf="@+id/txtFrontTireValue" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnRemoveVehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remover Viatura"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />
</android.support.constraint.ConstraintLayout>
